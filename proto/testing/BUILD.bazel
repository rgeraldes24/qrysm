load("@io_bazel_rules_go//proto:def.bzl", "go_proto_library")
load("@qrysm//tools/go:def.bzl", "go_library", "go_test")
load("@rules_proto//proto:defs.bzl", "proto_library")

proto_library(
    name = "testing_proto",
    srcs = ["test.proto"],
    visibility = ["//visibility:public"],
    deps = [
        "@com_google_protobuf//:descriptor_proto",
        "@com_google_protobuf//:timestamp_proto",
    ],
)

go_proto_library(
    name = "testing_go_proto",
    importpath = "github.com/theQRL/qrysm/proto/testing",
    proto = ":testing_proto",
    visibility = ["//visibility:public"],
)

go_library(
    name = "testing",
    embed = [":testing_go_proto"],
    importpath = "github.com/theQRL/qrysm/proto/testing",
    visibility = ["//visibility:public"],
)

go_test(
    name = "testing_test",
    srcs = ["tags_test.go"],
    embed = [":testing"],
    deps = [
        "//config/fieldparams",
        "//proto/qrysm/v1alpha1",
        "//testing/assert",
        "//testing/require",
    ],
)
