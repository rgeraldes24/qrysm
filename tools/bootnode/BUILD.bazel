load("@io_bazel_rules_go//go:def.bzl", "go_binary")
load("//tools:qrysm_image.bzl", "qrysm_image_upload")
load("@qrysm//tools/go:def.bzl", "go_library", "go_test")

go_library(
    name = "bootnode_lib",
    srcs = ["bootnode.go"],
    importpath = "github.com/theQRL/qrysm/tools/bootnode",
    visibility = ["//visibility:private"],
    deps = [
        "//async",
        "//beacon-chain/core/signing",
        "//config/params",
        "//crypto/ecdsa",
        "//encoding/bytesutil",
        "//io/logs",
        "//network",
        "//proto/qrysm/v1alpha1",
        "//runtime/maxprocs",
        "//runtime/version",
        "@com_github_libp2p_go_libp2p//core/crypto",
        "@com_github_pkg_errors//:errors",
        "@com_github_prometheus_client_golang//prometheus",
        "@com_github_prometheus_client_golang//prometheus/promauto",
        "@com_github_sirupsen_logrus//:logrus",
        "@com_github_theqrl_go_bitfield//:go-bitfield",
        "@com_github_theqrl_go_zond//crypto",
        "@com_github_theqrl_go_zond//log",
        "@com_github_theqrl_go_zond//p2p/discover",
        "@com_github_theqrl_go_zond//p2p/qnode",
        "@com_github_theqrl_go_zond//p2p/qnr",
    ],
)

go_binary(
    name = "bootnode",
    embed = [":bootnode_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "bootnode_test",
    srcs = ["bootnode_test.go"],
    embed = [":bootnode_lib"],
    flaky = True,
    deps = [
        "//crypto/ecdsa",
        "//network",
        "//runtime/maxprocs",
        "//testing/assert",
        "//testing/require",
        "@com_github_libp2p_go_libp2p//core/crypto",
        "@com_github_sirupsen_logrus//:logrus",
        "@com_github_theqrl_go_zond//p2p/discover",
        "@com_github_theqrl_go_zond//p2p/qnode",
    ],
)

qrysm_image_upload(
    name = "push_images",
    binary = ":bootnode",
    entrypoint = ["/bootnode"],
    repository = "index.docker.io/theqrl/qrysm-bootnode",
    symlinks = {
        # Backwards compatibility for images that depended on the old filepath.
        "/app/tools/bootnode/bootnode": "/bootnode",
    },
    tags = ["manual"],
)