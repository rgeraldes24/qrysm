load("@io_bazel_rules_go//go:def.bzl", "go_binary")
load("@qrysm//tools/go:def.bzl", "go_library")
load("//tools:qrysm_image.bzl", "qrysm_image_upload")

go_library(
    name = "execexporter_lib",
    srcs = ["main.go"],
    importpath = "github.com/theQRL/qrysm/tools/execexporter",
    visibility = ["//visibility:private"],
    deps = [
        "//runtime/maxprocs",
        "@com_github_sirupsen_logrus//:logrus",
        "@com_github_theqrl_go_zond//common",
        "@com_github_theqrl_go_zond//params",
        "@com_github_theqrl_go_zond//qrlclient",
    ],
)

go_binary(
    name = "execexporter",
    embed = [":execexporter_lib"],
    visibility = ["//visibility:public"],
)

qrysm_image_upload(
    name = "push_images",
    binary = ":execexporter",
    entrypoint = ["/execexporter"],
    repository = "index.docker.io/theqrl/qrysm-execmonitor",
    symlinks = {
        # Backwards compatibility for images that depended on the old filepath.
        "/app/tools/execexporter/execexporter": "/execexporter",
    },
    tags = ["manual"],
)
