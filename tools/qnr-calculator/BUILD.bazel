load("@io_bazel_rules_go//go:def.bzl", "go_binary")
load("@qrysm//tools/go:def.bzl", "go_library")
load("//tools:qrysm_image.bzl", "qrysm_image_upload")

go_library(
    name = "qnr-calculator_lib",
    srcs = ["main.go"],
    importpath = "github.com/theQRL/qrysm/tools/qnr-calculator",
    visibility = ["//visibility:private"],
    deps = [
        "//crypto/ecdsa",
        "//io/file",
        "//runtime/maxprocs",
        "@com_github_libp2p_go_libp2p//core/crypto",
        "@com_github_sirupsen_logrus//:logrus",
        "@com_github_theqrl_go_zond//p2p/qnode",
        "@com_github_theqrl_go_zond//p2p/qnr",
    ],
)

go_binary(
    name = "qnr-calculator",
    embed = [":qnr-calculator_lib"],
    visibility = ["//visibility:public"],
)

qrysm_image_upload(
    name = "push_images",
    binary = ":qnr-calculator",
    entrypoint = ["/qnr-calculator"],
    repository = "index.docker.io/theqrl/qrysm-qnr-calculator",
    symlinks = {
        # Backwards compatibility for images that depended on the old filepath.
        "/app/tools/qnr-calculator/qnr-calculator": "/qnr-calculator",
    },
    tags = ["manual"],
)
