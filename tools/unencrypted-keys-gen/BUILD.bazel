load("@qrysm//tools/go:def.bzl", "go_library", "go_test")
load("@io_bazel_rules_go//go:def.bzl", "go_binary")

go_library(
    name = "unencrypted-keys-gen_lib",
    srcs = ["main.go"],
    importpath = "github.com/theQRL/qrysm/tools/unencrypted-keys-gen",
    visibility = [
        "//tools/interop/convert-keys:__pkg__",
    ],
    deps = [
        "//crypto/ml_dsa_87",
        "//runtime/interop",
        "//tools/unencrypted-keys-gen/keygen",
    ],
)

go_binary(
    name = "unencrypted-keys-gen",
    embed = [":unencrypted-keys-gen_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "unencrypted-keys-gen_test",
    srcs = ["main_test.go"],
    embed = [":unencrypted-keys-gen_lib"],
    deps = [
        "//testing/assert",
        "//testing/require",
        "//tools/unencrypted-keys-gen/keygen",
    ],
)
